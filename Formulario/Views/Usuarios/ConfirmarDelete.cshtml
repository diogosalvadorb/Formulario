@model Usuarios
@{
    ViewData["Title"] = "Confirmação de deletar usuário";
}

<div class="text-center">
    <h4>Deseja deletar o usuário(@Model.Nome)?</h4>
</div>

<a class="btn btn-danger" role="button" asp-controller="Usuarios" asp-route-id="@Model.Id" asp-action="Apagar">Deletar</a>
<a class="btn btn-primary" role="button" asp-controller="Usuarios" asp-action="Index">Cancelar</a>